@model IEnumerable<Online_Survey.Models.People>
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Index";
}

<h1>People</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</p>
<table class="table table_normal table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reg_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tell)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reg_date)
                </td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@item.P_no" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <!-- Details Button -->
                    <a asp-action="Details" asp-route-id="@item.P_no" class="btn btn-info btn-sm">
                        <i class="fa fa-info-circle"></i> Details
                    </a>
                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@item.P_no" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
