@model IEnumerable<Online_Survey.Models.User>
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</p>

<table class="table table_normal table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reg_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.People.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reg_date)
                </td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@item.User_id" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i> 
                    </a>
                    <!-- Details Button -->
                    <a asp-action="Details" asp-route-id="@item.User_id" class="btn btn-info btn-sm">
                        <i class="fa fa-info-circle"></i> 
                    </a>
                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@item.User_id" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> 
                    </a>
                    <!-- Send Button -->
                    <a asp-action="Send" asp-route-id="@item.User_id" class="btn btn-success btn-sm">
                        <i class="fa fa-envelope"></i> 
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
