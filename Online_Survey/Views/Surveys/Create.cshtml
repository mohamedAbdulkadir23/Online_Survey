@model Online_Survey.Models.Survey
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Survey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Title Input Field -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description Input Field -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Created_by Dropdown -->
            <div class="form-group">
                <label asp-for="Created_by" class="control-label"></label>
                <select asp-for="Created_by" class="form-control" asp-items="ViewBag.Created_by"></select>
            </div>

            <!-- Created_at Input Field -->
            <div class="form-group">
                <label asp-for="Created_at" class="control-label"></label>
                <input asp-for="Created_at" class="form-control" disabled="disabled" />
                <span asp-validation-for="Created_at" class="text-danger"></span>
            </div>

            <!-- End Date Input Field (optional, as it's not in your schema) -->
            <div class="form-group">
                <label asp-for="End_date" class="control-label"></label>
                <input asp-for="End_date" class="form-control" />
                <span asp-validation-for="End_date" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
